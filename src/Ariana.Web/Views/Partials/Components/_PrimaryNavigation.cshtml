@using Ariana.Extensions
@using Ariana.Logic.Models
@using Ariana.Models.DocumentTypes.Navigation
@using Ariana.Umbraco.Helpers
@using Arina.Logic.Models

@{
    Settings siteSetting = ContentHelper.Instance.GetSiteSettings();
    NavigationRoot root = siteSetting.Children<NavigationRoot>().FirstOrDefault();
}


@if (root == null)
{
    return;
}


<nav id="primary-navigation">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="brand">
                    <h2>Ariana </h2>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="inner-wrap">
                    <ul>
                        @foreach (LinkMenuFolder menuFolder in root.MenuFolders)
                        {
                            <li>
                                <a href="#" data-content-type="work">
                                    <span class="txt">Selected Work</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>